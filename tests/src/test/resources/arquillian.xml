<?xml version="1.0" encoding="UTF-8"?>
<arquillian xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xmlns="http://jboss.org/schema/arquillian"
            xsi:schemaLocation="http://jboss.org/schema/arquillian http://jboss.org/schema/arquillian/arquillian_1_0.xsd">

    <defaultProtocol type="Servlet 2.5"/>

    <container qualifier="jbossas-managed" default="true">
        <configuration>
            <property name="jbossHome">${basedir}/../build-as/target/jboss-as-${version.jboss.as}</property>
            <property name="serverConfig">standalone-capedwarf.xml</property>
            <property name="javaVmArguments">-Xmx512m -XX:MaxPermSize=128m -b ${ip.binding:192.168.30.249}</property>
        </configuration>
    </container>
</arquillian>